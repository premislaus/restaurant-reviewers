<% include _header %>

<main role="main">

    <div class="album py-5 bg-light">
        <div class="container">

            <h3 class="pb-3 mb-4 border-bottom">Popular locations in Ireland</h3>

            <div class="row">
                <% restaurants.forEach(function (restaurant) { %>
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img class="card-img-top" alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;" src="<%= restaurant.photograph %>" data-holder-rendered="true">
                            <div class="card-body">
                                <h4><a href="/restaurants/<%= restaurant.id %>"><%= restaurant.name %></a></h4>
                                <p class="card-text"><%= restaurant.neighborhood %></p>
                                <p class="card-text"><%= restaurant.address %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                    </div>
                                    <small class="text-muted"><%= restaurant.reviews.length %> Reviews</small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

</main>

